\entry{pinho_divergence_2010}{article}{}
  \name{author}{2}{}{%
    {{}%
     {Pinho}{P.}%
     {Catarina}{C.}%
     {}{}%
     {}{}}%
    {{}%
     {Hey}{H.}%
     {Jody}{J.}%
