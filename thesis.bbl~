  \verb efox/b7fuqjsf.default/zotero/storage/VV9HCJ7C/0014-3820(2002)056[2383PB
  \verb WGBT]2.0.html:text/html
  \endverb
  \field{journaltitle}{Evolution}
  \field{month}{12}
  \field{year}{2002}
  \field{urlday}{04}
  \field{urlmonth}{07}
  \field{urlyear}{2014}
