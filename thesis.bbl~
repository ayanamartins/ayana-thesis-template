\entry{kvist_evolution_2003}{article}{}
  \name{author}{6}{}{%
    {{}%
     {Kvist}{K.}%
     {Laura}{L.}%
     {}{}%
     {}{}}%
    {{}%
     {Martens}{M.}%
     {Jochen}{J.}%
