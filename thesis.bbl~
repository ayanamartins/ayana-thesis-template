\entry{borchers_genetic_2014}{article}{}
  \name{author}{2}{}{%
    {{}%
     {Borchers}{B.}%
     {Tanja~E.}{T.~E.}%
     {}{}%
     {}{}}%
    {{}%
     {Marcus}{M.}%
