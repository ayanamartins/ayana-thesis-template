\entry{gould_sexual_2010}{article}{}
  \name{author}{9}{}{%
    {{}%
     {Gould}{G.}%
     {Fred}{F.}%
     {}{}%
     {}{}}%
    {{}%
     {Estock}{E.}%
     {Marie}{M.}%
     {}{}%
     {}{}}%
    {{}%
     {Hillier}{H.}%
     {N.~Kirk}{N.~K.}%
     {}{}%
     {}{}}%
    {{}%
     {Powell}{P.}%
