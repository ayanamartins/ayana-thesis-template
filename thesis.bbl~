\entry{servedio_magic_2011}{article}{}
  \name{author}{5}{}{%
    {{}%
     {Servedio}{S.}%
     {Maria~R.}{M.~R.}%
     {}{}%
     {}{}}%
    {{}%
     {Doorn}{D.}%
