\entry{bolliger_landscape_2014}{article}{}
  \name{author}{3}{}{%
    {{}%
     {Bolliger}{B.}%
     {Janine}{J.}%
     {}{}%
     {}{}}%
    {{}%
     {Lander}{L.}%
     {Tonya}{T.}%
