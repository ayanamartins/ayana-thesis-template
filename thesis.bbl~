  \verb 10.1111/evo.12055
  \endverb
  \field{issn}{1558-5646}
  \field{number}{9}
  \field{pages}{2577\bibrangedash 2591}
  \field{title}{Genetic hitchhiking and the dynamic buildup of genomic
  divergence during speciation with gene Flow}
  \verb{url}
  \verb http://onlinelibrary.wiley.com/doi/10.1111/evo.12055/abstract
  \endverb
