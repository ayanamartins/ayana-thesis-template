\entry{scott_clustering_2013}{article}{}
  \name{author}{4}{}{%
    {{}%
     {Scott}{S.}%
     {Adam~D.}{A.~D.}%
     {}{}%
     {}{}}%
    {{}%
     {King}{K.}%
     {Dawn~M.}{D.~M.}%
