\entry{etges_genetics_2010}{article}{}
  \name{author}{4}{}{%
    {{}%
     {Etges}{E.}%
     {William~J.}{W.~J.}%
     {}{}%
     {}{}}%
    {{}%
     {De~Oliveira}{D.~O.}%
     {Cassia~Cardoso}{C.~C.}%
     {}{}%
     {}{}}%
    {{}%
     {Noor}{N.}%
     {Mohamed A.~F.}{M.~A.~F.}%
