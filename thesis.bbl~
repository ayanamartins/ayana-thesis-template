\entry{joseph_where_2008}{article}{}
  \name{author}{6}{}{%
    {{}%
     {Joseph}{J.}%
     {Leo}{L.}%
     {}{}%
     {}{}}%
    {{}%
     {Dolman}{D.}%
     {Gaynor}{G.}%
