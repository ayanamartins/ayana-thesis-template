\entry{fitzpatrick_pattern_2009}{article}{}
  \name{author}{3}{}{%
    {{}%
     {Fitzpatrick}{F.}%
     {B.~M.}{B.~M.}%
     {}{}%
     {}{}}%
    {{}%
     {Fordyce}{F.}%
     {J.~A.}{J.~A.}%
