@article{martinsen_three-genome_2008,
	title = {A three-genome phylogeny of malaria parasites (Plasmodium and closely related genera): Evolution of life-history traits and host switches},
	volume = {47},
	issn = {1055-7903},
	shorttitle = {A three-genome phylogeny of malaria parasites (Plasmodium and closely related genera)},
