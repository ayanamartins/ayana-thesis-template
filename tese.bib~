@article{mgonigle_sexual_2012,
	title = {Sexual selection enables long-term coexistence despite ecological equivalence},
	volume = {484},
	copyright = {© 2012 Nature Publishing Group, a division of Macmillan Publishers Limited. All Rights Reserved.},
