@article{kellen_host-parasite_1965,
	title = {Host-parasite relationships of some Thelohania from mosquitoes (Nosematidae: Microsporidia)},
	volume = {7},
	issn = {0022-2011},
	shorttitle = {Host-parasite relationships of some Thelohania from mosquitoes (Nosematidae},
	url = {http://www.sciencedirect.com/science/article/B6WJV-4F1J0S7-S1/2/8b9cb6f7be51891bbbcada26a5da45f0},
	doi = {10.1016/0022-2011(65)90030-3},
	abstract = {Parasites of the genus Thelohania were studied in 16 species of mosquitoes in California and four basic types of host-parasite relationships have been observed: Type I. Sporogony takes place in males but not in females. Males die but females survive to transmit parasites transovarially. Infections are limited to oenocytes. This type of relationship has been observed in Culex tarsalis Coquillett and probably also occurs in C. erythrothorax Dyar, Aedes squamiger (Coquillett), A. cataphylla Dyar, A. hexodontus Dyar, A. ventrovittus Dyar, and A. increpitus Dyar. Type {II}. Sporogony takes place in both sexes but most individuals (75-85 percent) with progressive infections are males. Oenocytes and adipose tissue are invaded. This type has been observed in Aedes melanimon Dyar and Culex apicalis Adams. Type {III}. Sporogony occurs in both sexes and infections are usually fatal; some females may survive to transmit parasites transovarially. Adipose tissue is infected and oenocytes may also be invaded. This type has been observed in C. thriambus Dyar, A. dorsalis (Meigen), Culiseta incidens (Thomson), C. inornata (Williston), and C. particeps (Adams). Type {IV}. Sporogony occurs in both sexes, but areas of invasion are usually limited and do not interfere with larval development or adult survival. Infection is limited to adipose tissue. This type was observed only in C. apicalis infected with Thelohania benigna Kellen and Wills.},
