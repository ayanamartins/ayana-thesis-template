@article{schneider_evolutionary_2013,
	title = {Evolutionary consequences of assortativeness in haploid genotypes},
	url = {http://arxiv.org/abs/1309.0853},
	abstract = {We study the evolution of allele frequencies in a large population where random mating is violated in a particular way that is related to recent works on speciation. Specifically, we consider non-random encounters in haploid organisms described by biallelic genes at two loci and assume that individuals whose alleles differ at both loci are incompatible. We show that evolution under these conditions leads to the disappearance of one of the alleles and substantially reduces the diversity of the population. The allele that disappears, and the other allele frequencies at equilibrium, depend only on their initial values, and so does the time to equilibration. However, certain combinations of allele frequencies remain constant during the process, revealing the emergence of strong correlation between the two loci promoted by the epistatic mechanism of incompatibility. We determine the geometrical structure of the haplotype frequency space and solve the dynamical equations, obtaining a simple rule to determine equilibrium solution from the initial conditions. We show that our results are equivalent to selection against double heterozigotes for a population of diploid individuals and discuss the relevance of our findings to speciation.},
	urldate = {2013-10-15},
	author = {Schneider, David M. and Martins, Ayana B. and Carmo, Eduardo do and de Aguiar, Marcus A. M.},
	month = sep,
	year = {2013},
	keywords = {Quantitative Biology - Populations and Evolution},
	file = {1309.0853 PDF:/home/ayana/.mozilla/firefox/b7fuqjsf.default/zotero/storage/W2RSIXG3/Schneider et al. - 2013 - Evolutionary consequences of assortativeness in ha.pdf:application/pdf;arXiv.org Snapshot:/home/ayana/.mozilla/firefox/b7fuqjsf.default/zotero/storage/MX7HFAZX/1309.html:text/html}
