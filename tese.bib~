@article{fujii_transfection_2001,
	title = {Transfection of Wolbachia in Lepidoptera: the feminizer of the adzuki bean borer Ostrinia scapulalis causes male killing in the Mediterranean flour moth Ephestia kuehniella},
	volume = {268},
	shorttitle = {Transfection of Wolbachia in Lepidoptera},
	url = {http://rspb.royalsocietypublishing.org/content/268/1469/855.abstract},
	doi = {10.1098/rspb.2001.1593},
	abstract = {Two species of Lepidoptera, and , harbour , which are maternally transmitted intracellular bacteria that often cause reproductive abnormalities in arthropods. While the infection in causes conversion of genetic males into functional females (feminization), that in induces cytoplasmic incompatibility. In the present study, we investigated the relative importance of host and factors in the differential expression of reproductive alterations in these insects. We transferred the harboured by to in which the original infection had been cured by tetracycline treatment. The transfected strain of expressed a maternally inherited, female–biased sex ratio. Unexpectedly, two lines of evidence suggested that the sex ratio distortion was due to male killing. First, higher mortality of young larvae was observed. Second, the removal of the transferred resulted in the recovery of a 1:1 sex ratio, whereas the removal of a feminizer should result in a male-biased sex ratio among offspring. To the authors' knowledge, this is the first report that a single strain can cause two distinct sexual abnormalities in different hosts. Our observations highlighted the importance of host— interactions in determining the phenotype of reproductive alterations.},
